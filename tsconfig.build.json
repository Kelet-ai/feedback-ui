{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.stories.tsx",
    "src/**/*.stories.ts",
    "src/components/ui/**",
    "src/lib/utils.ts",
    "src/ui/shadcn/**",
    "node_modules",
    "dist"
  ]
}
